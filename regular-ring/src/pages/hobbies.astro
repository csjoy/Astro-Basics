---
import MainLayout from "../layouts/MainLayout.astro";

const hobbies = [
  "Reading Books",
  "Listening to Music",
  "Browsing the Internet",
  "Learning Japanese Words",
  ]
---

<MainLayout title="My Hobbies">
  <ul class="w-48 text-sm font-medium rounded-lg border bg-gray-700 border-gray-600 text-white">
    {hobbies.map((hobby) => 
    <li class="py-2 px-4 w-full rounded-t-lg border-b border-gray-600">{hobby}</li>
    )}
  </ul>
</MainLayout>